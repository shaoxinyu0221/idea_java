<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
    namespace填的要执行的接口的全类名
-->
<mapper namespace="com.shaoxinyu.dao.UserDao">

    <!--
        id填要执行的接口中的方法名
        parameterType 代表参数类型,填参数的全类名
        useGeneratedKeys 表示主键回填功能,true表示开启,false表示关闭
        keyProperty 表示要把回填的值赋值给哪个属性
      -->
    <insert id="add" parameterType="com.shaoxinyu.entity.User" useGeneratedKeys="true" keyProperty="id">
        insert into t_user(username, password) values (#{username}, #{password});
    </insert>

    <insert id="add2" parameterType="String">
        insert into t_user(username, password) values (#{name}, #{password});
    </insert>

    <delete id="del" parameterType="String">
        delete from t_user where username=#{name};
    </delete>

    <update id="update" parameterType="String">
        update t_user set username = #{newName} where username = #{oldName};
    </update>

    <!--  单行查询,查询的结果类型填方法返回类型的全类名  -->
    <select id="queryById" resultType="com.shaoxinyu.entity.User">
        select * from t_user where id = #{id};
    </select>

    <!--  单行查询,查询的结果类型填方法返回集合的泛型的名称 -->
    <select id="queryAll" resultType="com.shaoxinyu.entity.User">
        select * from t_user;
    </select>
</mapper>